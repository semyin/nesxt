{
  "name": "2n-blog",
  "version": "0.1.0",
  "description": "简化的NestJS和Next.js博客应用框架",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "dev:fast": "nodemon --exec node --require @swc/register src/main.ts",
    "build": "cross-env NODE_ENV=production nest build && cd src/client && next build",
    "start": "cross-env NODE_ENV=production node dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "next": "14.0.4",
    "react": "^18",
    "react-dom": "^18",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@swc/cli": "^0.1.65",
    "@swc/core": "^1.11.4",
    "@swc/register": "^0.1.10",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cpy": "^9.0.1",
    "cpy-cli": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "eslint-plugin-prettier": "^5.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
